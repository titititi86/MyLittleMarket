<h1>Buyers</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Postal address</th>
      <th>RÃ´le</th>
      <th>Actions</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.postal_address %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to 'Show', user %>
        <% if can? :update, user %>
        | <%= link_to 'Edit', edit_user_path(user) %><br>
        <% end %>
        <% if can? :destroy, user %>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>

