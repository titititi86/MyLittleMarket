            <ul class="nav navbar-nav">
                <li class="active">
                    <a class=" glyphicon glyphicon-home" href="/"></a>
                </li>
                <li><%= link_to 'Women', products_path %></li>
                <% @categories.each do |category| %>
                <li>
                    <%= link_to category.name, '/categories/' +  category.id.to_s %>
                </li>
                <% end %>
                <li><%= link_to 'Subscribe to the Newsletter', subscribers_path%></li>
                <li><%= link_to 'Contact Us', new_contact_path%></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if current_user %>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <%= current_user.first_name + " " + current_user.last_name %>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to ' My Account', '/users/' + current_user.id.to_s, class: "glyphicon glyphicon-user" %></li>
                        <li><%= link_to ' Edit my Profile', '/users/' + current_user.id.to_s + '/edit', class: "glyphicon glyphicon-edit"%></li>
                        <% if current_user && current_user.role == "Admin" %>
                        <li class="divider"></li>
                        <li><%= link_to ' Create a product', new_product_path%></li>
                        <li><%= link_to ' Categories', categories_path %></li>
                        <li><%= link_to ' Buyers', users_path %></li>
                        <li><%= link_to ' Subscribers', '/subscribers/all/' %></li>
                        <li><%= link_to ' Sales', sales_path %></li>
                        <li><%= link_to ' Messages', contacts_path %></li>
                        <% end %>
                        <li class="divider"></li>
                        <li><%= link_to " Logout", logout_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-log-out" %></li>
                    </ul>
                </li>
                <% else %>
                <li><%= link_to " Login", login_path, class: "glyphicon glyphicon-log-in" %></li>
                <li><%= link_to " Signup", signup_path, class: "glyphicon glyphicon-user" %></a>
                </li>
                <% end %>
            </ul>
        </div>
    </nav>

