<h1>Listing Categories</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category, :class => "btn btn-xs" %>
        <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-xs" %>
        <%= link_to 'Destroy', category, method: :delete, :class => "btn btn-xs", data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user %>
<%= link_to 'New Category', new_category_path %>
<% end %>
