<%= form_for(@contact, html: {class: 'col-md-10'}) do |f| %>
<% if @contact.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@contact.errors.count, "error") %>
        prohibited this contact from being saved:</h2>

    <ul>
        <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="field form-group">
    <%= f.text_field :name, class: 'form-control', :placeholder => "Insert your Name" %>
</div>

<div class="field form-group">
    <%= f.email_field :email, class: 'form-control', :placeholder => "Insert your Email" %>
</div>

<div class="field form-group">
    <%= f.text_field :subject, class: 'form-control', :placeholder => "Insert your Subject" %>
</div>

<div class="field form-group">
    <%= f.text_area :content, class: 'form-control', rows: '10', :placeholder => "Comments" %>
</div>

<br>
<div class="actions">
    <%= f.submit "Add a Comment", class: "btn btn-primary btn-block" %>
</div>
<% end %>
